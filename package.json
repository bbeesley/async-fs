{
  "name": "async-fs-wrapper",
  "version": "1.0.0",
  "description": "Async wrappers for node's filesystem module",
  "main": "dist/main/index.js",
  "repository": "git@github.com:bbeesley/async-fs.git",
  "author": "Bill Beesley <bill@beesley.dev>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10.16"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "compile": "BABEL_ENV=production babel src --out-dir dist --copy-files --source-maps --extensions \".js\" --ignore \"src/test/**\"",
    "dependabump": "ncu -u && rm -rf package-lock.json node_modules | true && npm i",
    "postcompile": "./node_modules/.bin/documentation readme src/main/index.js -s \"api\" --github",
    "lint": "./node_modules/.bin/eslint src/**  --fix",
    "mocha": "BABEL_ENV=test nyc mocha --require ./src/test/index.js 'src/test/**/*.test.js'",
    "pretest": "run-p clean lint",
    "posttest": "npm run compile",
    "test": "BABEL_ENV=test #npm run mocha",
    "prerelease": "npm run compile",
    "release": "semantic-release --debug"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-syntax-flow": "^7.7.0",
    "@babel/plugin-transform-flow-strip-types": "^7.6.3",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.7.0",
    "@babel/preset-stage-0": "^7.0.0",
    "@babel/register": "^7.7.0",
    "@babel/runtime": "^7.7.2",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@semantic-release/changelog": "^3.0.5",
    "@semantic-release/commit-analyzer": "^6.3.3",
    "@semantic-release/git": "^7.0.18",
    "@semantic-release/github": "^5.5.5",
    "@semantic-release/npm": "^5.3.4",
    "@semantic-release/release-notes-generator": "^7.3.2",
    "arrow-mocha": "^1.0.1",
    "babel-eslint": "^10.0.3",
    "babel-plugin-istanbul": "^5.2.0",
    "babel-plugin-rewire": "^1.2.0",
    "chai": "^4.1.2",
    "conventional-changelog-angular": "^5.0.5",
    "cz-conventional-changelog": "^3.0.2",
    "documentation": "^12.1.3",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-flowtype": "^3.10.4",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "fetch-mock": "^8.1.0",
    "husky": "^3.0.9",
    "ignore-styles": "^5.0.1",
    "mocha": "^6.2.0",
    "mocha-sinon": "^2.0.0",
    "nodemon": "^2.0.1",
    "npm-check-updates": "^3.2.1",
    "npm-run-all": "^4.1.2",
    "nyc": "^14.1.1",
    "semantic-release": "^15.13.30",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.0.0"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0"
  },
  "release": {
    "branch": "master",
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/github",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md",
            "README.md"
          ]
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
