{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": ["ESNext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "resolveJsonModule": true
  },
  "include": [
      "src/main/**/*"
  ]
}